# Voluntary Consent Detector - Environment Configuration
# Copy this file to .env and fill in your specific values
# DO NOT commit .env to version control

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL Connection String
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
# Local development:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/consent_detector

# For Render.com (PostgreSQL as a Service)
# DATABASE_URL=postgresql://user:password@hostname:5432/dbname

# For AWS RDS
# DATABASE_URL=postgresql://user:password@your-rds-endpoint:5432/consent_detector

# For Azure Database for PostgreSQL
# DATABASE_URL=postgresql://user@servername:password@servername.postgres.database.azure.com:5432/consent_detector

# For DigitalOcean Database
# DATABASE_URL=postgresql://user:password@your-cluster-id.db.ondigitalocean.com:25060/consent_detector?sslmode=require

# ============================================================================
# POSTGRES CONTAINER VARIABLES (for Docker Compose)
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=consent_detector
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
# Backend API URL for frontend to communicate with
REACT_APP_API_URL=http://localhost:8000

# For production deployment:
# REACT_APP_API_URL=https://api.yourdomain.com

# ============================================================================
# BACKEND SERVER CONFIGURATION
# ============================================================================
# Server host and port
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# CORS configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# For production:
# CORS_ORIGINS=["https://yourdomain.com", "https://api.yourdomain.com"]

# ============================================================================
# ENCRYPTION & SECURITY
# ============================================================================
# RSA key paths for digital signatures
RSA_PRIVATE_KEY_PATH=/app/keys/private_key.pem
RSA_PUBLIC_KEY_PATH=/app/keys/public_key.pem

# API Secret Key (for JWT tokens if needed)
SECRET_KEY=your_secret_key_change_in_production

# Encryption key for data encryption
ENCRYPTION_KEY=your_encryption_key_32_bytes

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FILE=/app/logs/consent_detector.log

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Application environment
ENVIRONMENT=development
# Options: development, staging, production

# Application version
APP_VERSION=2.0.0

# Timezone
TIMEZONE=Asia/Kolkata

# ============================================================================
# COMPLIANCE CONFIGURATION
# ============================================================================
# Default jurisdiction for consent processing
DEFAULT_JURISDICTION=India

# Data retention period (in years)
DATA_RETENTION_PERIOD=7

# ============================================================================
# DEPLOYMENT SETTINGS (Production)
# ============================================================================
# For Render.com deployment:
# Set the following in Render dashboard under Environment
# DATABASE_URL (auto-generated by Render)
# NODE_ENV=production
# PYTHON_VERSION=3.11
# PORT=8000

# For Vercel/Netlify frontend deployment:
# Set REACT_APP_API_URL to your production backend URL

# ============================================================================
# OPTIONAL: Third-party Services
# ============================================================================
# Sentry Error Tracking (optional)
# SENTRY_DSN=https://your-sentry-key@sentry.io/project-id

# AWS S3 for document storage (optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=consent-detector-storage
# AWS_REGION=ap-south-1

# SendGrid for email notifications (optional)
# SENDGRID_API_KEY=your_sendgrid_key
# SENDGRID_FROM_EMAIL=notifications@yourdomain.com

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit .env file to version control
# 2. Use .env.example for team reference only
# 3. Store sensitive values in secure vaults (Render Secrets, AWS Secrets Manager, etc.)
# 4. Rotate encryption keys regularly
# 5. Use environment-specific values for each deployment stage
# 6. Test all configuration changes before deploying to production
